#!/usr/bin/env ruby -wKU


def download(url)
  puts url.inspect
  system "youtube-dl #{url} -t"
  file = `ls *.flv`.chomp
  file = `ls *.mp4`.chomp if file.empty?
  file =~ /(\w+)\-?/
  output = "#{$1}.mp3"
  system "ffmpeg -i #{file} -vn -acodec libmp3lame -ab 320k #{output}"
  system "mkdir -p flvs"
  system "mv #{file} flvs/"
end

if ARGV[0] =~ /\.txt/
  input = File.open(ARGV[0])
  input.each_line { |url| download(url.chomp) unless url =~ /^#/ }
else
  download ARGV[0]
end
