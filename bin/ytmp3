#!/usr/bin/env ruby -wKU


def download(url)
  system "youtube-dl #{url} -t"
  file = `ls *.flv`.chomp
  output = file.gsub(/-.+\./,'.').gsub('.flv','.mp3')
  system "ffmpeg -i #{file} -vn -acodec libmp3lame -ab 128 #{output}"
  system "rm #{file}"
end

if ARGV[0] =~ /\.txt/
  input = File.open(ARGV[0])
  input.each_line { |url| download url }
else
  download ARGV[0]
end
